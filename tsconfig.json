{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016"
    ],
    "allowJs": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false
  },
  "include": [
    "./*.ts"
  ]
}
